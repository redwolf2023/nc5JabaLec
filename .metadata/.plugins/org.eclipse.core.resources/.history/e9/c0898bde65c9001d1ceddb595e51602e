package homework8;

import java.util.Arrays;

public class Middle {

	public static void main(String[] args) {

		StringBuffer sb = new StringBuffer(30);
		
		String str1 = "hello";
		String str2 = "bit"; // 추가할 문자열 "bit" 선언

		int str2Index = 0; // str2 문자열 인덱스 초기화
		for (int i = 0; i < 30; i++) {
		    if (i % 2 == 0) {
		        sb.append(str1.charAt(i / 2));
		    } else {
		        sb.append(str2.charAt(str2Index));
		        str2Index = (str2Index + 1) % 3; // str2 문자열 인덱스 갱신
		    }
		}

		System.out.println(sb.toString()); // 결과 출력
	}

}
