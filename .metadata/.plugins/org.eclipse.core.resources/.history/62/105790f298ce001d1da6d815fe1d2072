		Scanner sc = new Scanner(System.in);
//		
//		System.out.println("첫번째 정수 하나를 입력하시오");
//		int a = sc.nextInt();
//		System.out.println("두번째 정수 하나를 입력하시오.");
//		int b = sc.nextInt();
//		char c = '\0';
		
//		System.out.println(a + b);
		
		//4.사용자가 입력한 5개의 정수의 합계와 평균을 출력하세요.
		
//			System.out.println("정수5개를 입력하세요");
//			int a = sc.nextInt();
//			int b = sc.nextInt();
//			int c = sc.nextInt();
//			int d = sc.nextInt();
//			int e = sc.nextInt();
