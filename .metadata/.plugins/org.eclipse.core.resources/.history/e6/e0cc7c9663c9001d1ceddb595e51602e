package homework8;

import java.util.Arrays;

public class Middle {

	public static void main(String[] args) {

		StringBuffer sb = new StringBuffer(30);
		
		String str = "hello";
		sb.append(str);
		int emptySpace = 30 - sb.length();
		char[] fill = new char[emptySpace];
		Arrays.fill(fill, 'b','i','t');
		sb.append(fill);
		System.out.println(sb);
		
	}

}
